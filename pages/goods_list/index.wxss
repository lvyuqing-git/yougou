/* pages/goods_list/index.wxss */

/* //顶部搜索框 */

.headersearchbox {
  background: #eee;
  padding: 20rpx;
  box-sizing: border-box;
}

.search {
  width: 100%;
  background: #fff;
  padding-left: 10rpx;
  box-sizing: border-box;
  font-size: 14px;
}

.search icon {
  vertical-align: middle;
  margin-right: 4px;
}

/* 栏目列表 */
.active{
  color: #eb4450;
}
.columnlist {
  display: flex;
  justify-content: space-around;
  line-height: 100rpx;
  border-bottom: 1px solid #ddd;
  font-size: 26rpx;
  position: relative;
}

/* //小三角 */

.triangle {
  position: absolute;
  right: 8%;
  top: 35%;
}

.triangle::before {
  content: '';
  position: absolute;
  border-left: 5px solid transparent;
  border-right: 5px solid transparent;
  border-bottom: 15rpx solid #cccccc;
}

.triangle::after {
  content: '';
  border-left: 5px solid transparent;
  border-right: 5px solid transparent;
  border-top: 15rpx solid #666666;
}

/* //商品列表 */

.commodityitem {
  display: flex;
  padding: 20rpx;
}

.left {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}

.left image {
  width: 100%;
}

.right {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding-left: 20rpx;
}

.right .commodityname {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.right .price {
  color: #ec5965;
}
.load{
  padding-top: 20rpx;
  text-align: center;
}
