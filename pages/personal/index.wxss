.user-info{
  position: relative;
}
.user-portrait {
  height: 400rpx;
  background: #eb4450;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.user-portrait .img image {
  height: 133rpx;
  width: 133rpx;
  border: 2px solid #fff;
  border-radius: 50%;
  margin:0 40rpx;
}
.user-portrait .img view{
font-size: 30rpx;
text-align: center;
}

/* 收藏操作 */
.collect{
  position: absolute;
  display: flex;
  top: 380rpx;
  left: 14rpx;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
  height: 120rpx;
  width: 96%;
  border-radius: 3px;
  background:#fff;
}
.collect .collect-item{
  text-align: center;
  padding: 20rpx;
}

.box-bottom{
  margin-top: 120rpx;
  border-top: 25rpx solid #f4f4f4;
   padding:0 20rpx;
}
.box-bottom .order-number{
  padding: 20rpx;
  border-bottom: 1px solid #eee;
}
.box-bottom .user-operation{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}
.operation-item{
  display: flex;
  flex-direction: column;
  text-align: center;
  font-size: 26rpx;
}
.operation-item .iconfont{
  color: red;
  padding-bottom: 20rpx;
}