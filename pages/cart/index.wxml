<view>
  <!-- 底部操作栏 -->
  <view class="accounts">
    <view class="left">全选</view>
    <view class="center">
      <view class="centerbox">
        <text>合计：￥10000.00</text>
        <text>包含运费</text>
      </view>
    </view>
    <view class="right">结算（3）</view>
  </view>
  <!-- 没有商品状态购物车样式 -->
  <view class="sccar" wx:if="{{carData}}">
    <image src="../../images/cart_empty@2x.png" mode="aspectFill"></image>
    你还没有添加任何商品
  </view>

  <!-- 有商品状态购物车样式 -->
  <view class="userinfo" wx:if="{{addressInfo.userName}}">
    <view class="consignee">
      <text>收货人：{{addressInfo.userName}}</text>
      <text>{{addressInfo.telNumber}}</text>
    </view>
    <view class="site">
      收货地址：{{addressInfo.address}}
    </view>
  </view>
  <view class="userinfo" wx:if="{{!addressInfo.userName}}">
    <view class="dizhi" bindtap="getAddress">
      点击设置收货地址
    </view>
  </view>
  <view class="flower">
    <image src="../../images/cart_border@2x.png"></image>
  </view>
  <!-- 优生活馆 -->
  <view class="excellent">
    <text class="iconfont icon-dianpu"></text> 优购生活馆
  </view>
  <!-- 购物商品列表 -->
  <view class="commoditylist">
  <view class="commodity" wx:for="{{10}}" wx:key="index">
      <view class="icon" >
        <icon type="success" color="red"></icon>
      </view>
      <view class="img">
        <image src="https://img30.360buyimg.com/jdcms/s300x300_jfs/t1/3405/18/3537/69901/5b997c0aE5dc8ed9f/a2c208410ae84d1f.jpg.webp" mode="aspectFill"></image>
      </view>
      <view class="right">
        <view class="commodityname">购物商品列表购物商品列表购物商品列表购物商品列表购物商品列表购物商品列表购物商品列表购物商品列表</view>
        <view class="operation">
          <text class="price">￥270</text>
          <view class="number">
            <view class="btn">-</view>
            <input value="1"></input>
            <view class="btn">+</view>
          </view>
        </view>
      </view>
  </view>
    
  </view>
</view>