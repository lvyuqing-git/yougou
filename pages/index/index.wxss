
/* //轮播图 */

.swiper swiper {
  height: 300rpx;
}

.swiper swiper-item image {
  height: 300rpx;
  width: 750rpx;
}

/* 导航菜单 */

.navmenu {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
}

.navmenu image {
  width: 128rpx;
  height: 140rpx;
}

/* //商品楼层
 */

.floortitle {
  width: 100%;
  height: 60rpx;
  background-color: #f5f5f5;
  padding: 30rpx 0;
}

.floortitle image {
  height: 100%;
}

.commodity {
  padding: 20rpx;
  display: flex;
}

.commodity .commodityleft {
  width: 232rpx;
  height: 368rpx;
}

.commodity .commodityleft image {
  width: 232rpx;
  height: 368rpx;
}

.commodityright {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
}

.commodityright image {
  box-sizing: border-box;
  width: 233rpx;
  height: 188rpx;
  padding-left: 10rpx;
  padding-bottom: 10rpx;
}
.floor + .floor .commodityright image{
   width: 193rpx;
  height: 188rpx;
}
.floor + .floor .commodityright image:nth-child(3n+1){
  width:273rpx;
  height: 188rpx;
}


