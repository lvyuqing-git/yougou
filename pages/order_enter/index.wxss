/* pages/order_enter/index.wxss */

/* 头部切换栏 */

.active {
  color: red;
  border-bottom: 3px solid red;
}

.payment-title-list {
  display: flex;
  justify-content: space-between;
  line-height: 100rpx;
  font-size: 28rpx;

}

.title-item {
  padding: 0 40rpx;
}

/* 商品列表 */
.commodity{
  border-top: 30rpx solid #f2f2f2;
}
.commodity-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
}

.left image {
  width: 200rpx;
  height: 200rpx;
}

.right {
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 26rpx;
  padding-left: 20rpx;
}

.commodity-name {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.commodity-price {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.commodity-price .price {
  color: #eb4450;
  font-size: 34rpx;
}

/* 商品价格信息 */

.price-info {
  padding: 20rpx;
  font-size: 20rpx;
  color: #9d9d9d;
  text-align: right;
  border-top: 1px solid #f4f4f4;
  border-bottom: 1px solid #f4f4f4;
}

/* 订单号 */

.order-number {
  display: flex;
  justify-content: space-between;
  font-size: 20rpx;
  color: #9d9d9d;
  padding: 20rpx;
}
.order-number .payment{
  width: 160rpx;
  height: 60rpx;
  border: 1px solid #9d9d9d;
  color: red;
  border-radius: 2px;
  line-height: 60rpx;
  text-align: center;
}
